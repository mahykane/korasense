{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "KORASENSE Knowledge Sync",
  "version": "1.0.0",
  "identifier": "com.KORASENSE.filesense",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app", "msi"],
    "publisher": "KORASENSE",
    "homepage": "https://korasense.com",
    "shortDescription": "KORASENSE FileSense - Sync your files to the knowledge base",
    "longDescription": "KORASENSE FileSense is a desktop application that watches your local folders and automatically syncs files to your KORASENSE knowledge base.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "Copyright Â© 2024 KORASENSE",
    "category": "Productivity",
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "wix": {
        "language": ["en-US"]
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "KORASENSE FileSense",
        "width": 900,
        "height": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "dialog:allow-open",
            "dialog:allow-message",
            "dialog:default",
            "store:allow-get",
            "store:allow-set",
            "store:allow-save",
            "store:allow-clear",
            "store:default",
            "shell:allow-open",
            "os:allow-platform"
          ]
        }
      ]
    }
  },
  "plugins": {}
}
